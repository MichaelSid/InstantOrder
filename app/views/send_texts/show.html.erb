
<div class="container">
	<div class="vc-outer text-centered">
		<h3> Sender: <%= @sender %> </h3>
		<h3> Service: <%= @ccc.service_type %> </h3>
		<h3> Contract Signed: <%= @ccc.signed_contract? %> </h3>
		<h3> Total Number of Messages: <%= @sms_tot %>
		<h3>  Messages Inbound: <%= @inbound.count %> </h3>
		<h3> Messages Outbound: <%= @outbound.count %> </h3>
		<%  cost = 0.00   %> 
		<%  cost_unit= " " %> 
		<% @message.each do |mm| %>
			<%  cost =  cost + mm.price.to_f %> 
			<%  cost_unit = mm.price_unit %> 
		<%  end %>
		<h3> Total Cost of messages: <%= number_to_currency(cost, :unit => "") %> <%= cost_unit %>  </h3>
	</div>
</div>


<div class="container">

	<%= form_for @ccc, url: show_id_update_path(@ccc.id) do |f| %>

		<div class="box-regist user-account-section">
    
			<div class="title-regist">
      			<div class="titleline-regist"><h3>Contractor Details</h3></div>
    		</div>
    
    		<div class="innerbox-regist">
      			<div class="row-fluid form-row row">
        			<div class="col-xs-6">
          				<label class="label-pre">First Name</label>
          				<div class="form-group">
            				<%= f.text_field :first_name, class: 'form-control'%>
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Last Name</label>
          				<div class="form-group">
            				<%= f.text_field :last_name, class: 'form-control' %>
          				</div>
        			</div>
      			</div>

	      		<div class="row-fluid form-row row">
        			<div class="col-xs-6">
          				<label class="label-pre">Mobile Number</label>
          				<div class="form-group">
            				<%= f.text_field :mobile_number, :required => true, class: 'form-control' %>
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Company Name</label>
          				<div class="form-group">
            				<%= f.text_field :company_name, class: 'form-control' %>
          				</div>
        			</div>
      			</div>


      			<div class="row-fluid form-row row">
        			<div class="col-xs-3">
          				<label class="label-pre">Service Type</label>
          				<div class="form-group">

          					<%= f.select :service_type, options_for_select(@services, selected_key = f.object.service_type), class: 'form-control' %>
          				</div>                     
        			</div>

        			<div class="col-xs-3">
          				<label class="label-pre">Check Box if Contract Signed</label>
          				<div class="form-group">
          					<%=  f.radio_button :signed_contract?, :checked => true, class: 'form-control' %>			
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Rating</label>
          				<div class="form-group">
            				<%= f.text_field :rating, class: 'form-control' %>
          				</div>
        			</div>
      			</div>



      			<div class="row-fluid form-row row">
        			<div class="col-xs-6">
          				<label class="label-pre">Date First Job</label>
          				<div class="form-group">
          					<%= f.text_field :first_job_at, class: 'form-control' %>
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Date Last Job</label>
          				<div class="form-group">
            				<%= f.text_field :last_job_at, class: 'form-control' %>
          				</div>
        			</div>
      			</div>


      			<div class="row-fluid form-row row">
        			<div class="col-xs-6">
          				<label class="label-pre">Number Jobs Done</label>
          				<div class="form-group">
          					<%= f.text_field :nunmber_jobs_done, class: 'form-control' %>
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Gross Pay</label>
          				<div class="form-group">
            				<%= f.text_field :gross_paid, class: 'form-control' %>
          				</div>
        			</div>
      			</div>

      			<div class="row-fluid form-row row">
        			<div class="col-xs-6">
          				<label class="label-pre">Net Pay</label>
          				<div class="form-group">
          					<%= f.text_field :net_pay, class: 'form-control' %>
          				</div>                     
        			</div>

        			<div class="col-xs-6">
          				<label class="label-pre">Materials/Expenses</label>
          				<div class="form-group">
            				<%= f.text_field :materials_refund, class: 'form-control' %>
          				</div>
        			</div>
      			</div>

      			<div class="row-fluid form-row row">
        			<div class="col-xs-12">
          				<label class="label-pre">Description</label>
          				<div class="form-group">
          					<%= f.text_area :description, class: 'form-control' %>
          				</div>                     
        			</div>
      			</div>
    		</div>
		</div>



		<div align="center">
          <%= f.submit 'Update Details', class: 'page-scroll btn btn-primary btn-lg outline submit-account', style: 'border-color: black; color: black; font-weight: 500;' %>
        </div>
	<% end %>
</div>

