<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.6.8-fix/jquery.nicescroll.min.js"></script>
<div class="content container-fluid bootstrap snippets">
	<div class="row row-broken">
    	<div class="col-sm-12 col-xs-12 chat" style="overflow: hidden; outline: none;" tabindex="5001">
          	<div class="col-inside-lg decor-default">
            		
          			
            	<div class="chat-body">

            		<div class="answer-add">
            			<div class="message_box">
            				<%= form_tag sms_body_path(:number_phone => @ccc.mobile_number) do %>
  								<%= text_area_tag :sms_body  %>
  									<div align="center">
          								<%= submit_tag 'Send Message', class: 'page-scroll btn btn-primary btn-lg outline submit-account', style: 'border-color: black; color: black; font-weight: 500; width: 50%;' %>
        							</div>
							<% end %>
						</div>	
	            	</div>


            		<!-- <div class="answer-add">
                		<input placeholder="Write a message">
	               		<span class="answer-btn answer-btn-1"></span>
	               		<span class="answer-btn answer-btn-2"></span>
	            	</div> -->

              		<h6>Mini Chat</h6>

              		<% @message.each do |mm| %>

	           			<% if mm.direction == 'inbound' %>

	              			<div class="answer left">
	                			<div class="avatar">
	                				<img src="" alt="User name">
	                			</div>
	                			<div class="name"><%=  mm.from %>  <span style="text-align: right;"><%= mm.status %></span></div>
	                			<div class="text" style="text-align: left;">
	                				<%=  mm.body %>
	                			</div>
	                			<div class="time"><%= mm.date_sent.to_time.strftime('%a %d %b %Y %H:%M') %></div>
	              			</div>

	           			<% else %>

	           				<% if mm.status == 'sent' || mm.status == 'delivered' %>
	         				<div class="answer right success">
	         				<% else %>
	         				<div class="answer right failure">
	         				<% end %>

	                			<div class="avatar">
	                				<img src="/assets/logo-image.png" alt="User name">
	                			</div>
	                			<div class="name"> <%=  mm.from %></div>
	                			<div class="text" style="text-align: left">
	                				<%=  mm.body %>
	                			</div>
	                			<div class="time"><%= mm.date_sent.to_time.strftime('%a %d %b %Y %H:%M') %></div>
	              			</div>

	           			<% end %>
	           		<% end %>

	            </div>
	       	</div>
	   	</div>
	</div>
</div>