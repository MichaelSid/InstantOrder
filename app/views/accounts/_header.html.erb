<header id="page-top" class='accounts_header'>
    <div class="header-content">
        <div class="container-fluid">
            <div class="col-lg-4 col-lg-offset-4 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1 registration_form">
<!--             Add style ect to css, need to remove p tag  -->
                <h3 style="text-align: center; color: white; font-family: 'ArialRoundedMTBold';">We will get back to you shortly!</h3>
                <p></p>
                <%= form_for @account, url: {action: 'create'} do |f| %>
                  <%= f.error_messages %>

                  <div class="form-group">
                    <!-- <label id="f_name">First Name</label> -->
                    <%= f.text_field :first_name, :required => true, placeholder: 'First Name', class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :last_name, :required => true, placeholder: 'Last Name', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :company, :required => true, placeholder: 'Company', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :email, :required => true, placeholder: 'Email', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :mobile_phone, :required => true, placeholder: 'Mobile Phone Number', class: 'form-control' %>
                  </div>
                  <br>
                  <div>
                      <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key= "<%= Rails.application.secrets.stripe_publishable_key %>"
                        data-label="Add Payment Details"
                        data-panel-label="Create Account"
                        data-name="Instela"
                        data-allow-remember-me="false"
                        data-locale="auto">
                      </script>
                  </div>
                  <br>
                  <div class="row">
                    <div class="col-lg-4 col-lg-offset-4 col-md-2 col-md-offset-5  col-sm-2 col-sm-offset-5 col-xs-6 col-xs-offset-3">
                    
                    <%= link_to image_tag("accounts/outline.png", :class => 'img-responsive'), "https://stripe.com/about"%>
                    </div>
                    <br><br>
                  </div>
                  <div class="form-group">
                    <%= f.submit 'REGISTER', class: 'page-scroll btn btn-primary btn-lg outline submit-account' %>
                  </div>
                  <br>
                  <!-- <p style="text-align: center; color: black; font-family: 'ArialRoundedMTBold';font-size: 14px;">We only charge your credit card once a service has been delivered.</p> -->
                  <p style="text-align: center; color: white; font-family: 'ArialRoundedMTBold';font-size: 14px;">
                  <!-- <input type="checkbox" required name="terms"> -->
                  By registering your details<br> you agree that you have read and accepted the <br><a href="/pages/terms">Terms and Conditions</a></p>
                <% end %>
            </div>
        </div>
    </div>
</header>