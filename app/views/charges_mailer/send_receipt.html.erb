    font-size: 1.4rem;
}

.order-invoice .invoice-client {
    font-weight: 600;
}


.order-invoice .invoice-service-price {
    padding: 20px 30px 0px 30px;
    font-size: 1.5rem;
    line-height: 2.5em;
    font-weight: 600;
}

.order-invoice .invoice-upper {
    text-transform: uppercase;
}


.order-invoice .invoice-price {
    padding: 5px 30px 0px 30px;
    color: #6b7781;
    font-size: 1.5rem;
    line-height: 1.3em;
}

.order-invoice .invoice-total {
    padding: 10px 30px 30px 30px;
    border-bottom: 1px solid #e8ecf0;
    font-size: 2.5rem;
    line-height: 2.1em;


}


.container-small{
    display: block;
    position: relative;
    max-width: 545px;
    margin-left: auto;
    margin-right: auto;
    
}

.box {
    background: #FFF;
    border-top: 3px solid #7f98b1;
    position: relative;
}


}

