    color: #6b7781;    
}

.order-invoice .invoice-amount {
    font-size: 3.0rem;
    line-height: 2.0em;
    font-weight: 600;
}

.order-invoice .invoice-id {
    font-size: 2.5rem;
    line-height: 1.5em;
    font-weight: 500;
}


.order-invoice .invoice-center {
