    color: white;
    text-decoration:none; 
}

.page-header-nav .muted-link:hover {
    color: #ffe7e4;
}


.order-invoice  {
     z-index: 1;
    margin-top: 30px;
}

.order-invoice .invoice-target {
    display: block;
    background: #fd705c;
    padding: 20px;
    text-align: center;
    position: relative;
    overflow: hidden;
    color: white;
    font-size: 4.5rem;

}

.order-invoice .invoice-meta {
    padding: 30px 30px 0px 30px;
}

.order-invoice .invoice-date-service {
    font-size: 1.8rem;
