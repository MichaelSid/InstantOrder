<%= render 'navbar' %>
<script src="https://checkout.stripe.com/checkout.js"></script>
<script   src="https://code.jquery.com/jquery-2.2.3.min.js" integrity="sha256-a23g1Nt4dtEYOj7bR+vTu7+T8VP13humZFBJNIYoEJo=" crossorigin="anonymous"></script>
<%= javascript_include_tag 'creative/registration' %>

<header id="page-top" class='accounts_header'>
    <div class="header-content">
        <div class="container-fluid">
            <div class="col-lg-4 col-lg-offset-4 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
                <h3 style="text-align: center; color: white; font-family: 'ArialRoundedMTBold';">Edit my account details</h3>
                <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                  <%= devise_error_messages! %>
                  <span class="payment-errors"></span>

                  <input type="hidden" name='payment_token' id="payment_token"/><br/>
                  <input type='hidden' name='stripe_key' value="<%= Rails.application.secrets.stripe_publishable_key %>" />                     <input type='hidden' name='stripe_key' value="<%= Rails.application.secrets.stripe_publishable_key %>" /><br>
                  <div class="form-group">
                    <%= f.text_field :full_name, :required => true, placeholder: 'Full Name', class: 'form-control'%>
                  </div>
                  <div class="form-group">
                    <%= f.text_field :company, :required => true, placeholder: 'Company', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= f.email_field :email, :required => true, placeholder: 'Email', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                  <%= f.text_field :mobile_phone, :required => true, placeholder: 'Mobile Phone Number', class: 'form-control' %>
                  </div>
                  <div class="form-group">
                   <i>Leave blank if you don't want to change your password</i>
                   <br>
                    <%= f.password_field :password, placeholder: 'New Password', class: 'form-control'  %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, placeholder: 'New Password Confirmation', class: 'form-control'%>
                  </div>
                  <br>
                  <div class="row">
                    <div class="col-lg-4 col-md-4 col-sm-4 col-xs-6" style="position:relative; bottom:0;">
                    <button id="paymentButton" class= 'page-scroll btn btn-primary btn-lg outline'>Edit Details</button>
                    </div>
                    <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4  col-sm-4 col-sm-offset-4 col-xs-5 col-xs-offset-1" style="position:relative; bottom:0;">
                    <%= link_to image_tag("accounts/light_solid.png", :class => 'img-responsive'), "https://stripe.com/about"%>
                    </div>
                    <br>
                  </div>
                  <br>
                  <div class="form-group">
                    <%= f.submit 'UPDATE', class: 'page-scroll btn btn-primary btn-lg outline submit-account' %>
                  </div>
                  <div id="stripeResponse"></div>
                <% end %>
            </div>
        </div>
    </div>
</header>

<%= render 'creatives/contact' %>
<%= render 'creatives/footer' %>

<% if false %>
  <h2>Edit <%= resource_name.to_s.humanize %></h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
    <div class="field">
      <%= f.label :password %>><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
    </div>
    <div class="field">
      <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
      <%= f.password_field :current_password, autocomplete: "off" %>
    </div>
    <div class="actions">
      <%= f.submit "Update" %>
    </div>
  <% end %>
  <h3>Cancel my account</h3>
  <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
  <%= link_to "Back", :back %>
<% end %>