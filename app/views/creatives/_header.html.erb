<header id="page-top" class="layer">
    <!-- <div class="header-content"> -->
        <div class"container-fluid">
            <div class="header-content-inner">
                <section id="video-block" class="fullscreen">
                    <!-- Adjust video height and width -->
                    <script>
                        var w = $(window).width(), h = $(window).height()
                        $('#video-block video').css({height: ''+h+'',width: ''+w+''})
                        $(window).resize(function(){
                        var w = $(window).width(), h = $(window).height()
                        $('#video-block video').css({height: ''+h+'',width: ''+w+''})
                        })
                    </script>
                    <!-- Embed Video as Background-->
                    <div class="container-fluid">
                        <div style="width:initial">
                            <%= video_tag("https://s3-eu-west-1.amazonaws.com/instelaltd/videos/office_video.mp4", :controls => true, :autobuffer => false, :autoplay => true, :loop => true, :id => "video-background") %>
                        </div>
                    </div>
                    <div class="container-fluid key_text">
                        <h2>Make Everything Work in Your Office</h2>
                        <h1 style="color: #f05f40;"><a style="text-decoration: none; color:#eb3812;" href="sms:+447454574821">07 45 45 74 821</a></h1>
                        <br>
                        <h4>Send an SMS to this number to get started</h4>
                        <h4>Available on-demand during weekdays from 8AM until 8PM</h4>
                        <hr>
                        <%= link_to 'OPEN AN ACCOUNT - FREE SIGN UP', new_account_path, class: "btn btn-primary btn-xl page-scroll register_button" %>
                    </div>
                </section>
                <% flash.each do |key, value| %>
                    <div class="alert alert-<%= key %>"><%= value %></div>
                <% end %>
            </div>
        </div>
    <!-- </div> -->
</header>






